{
  "name": "ssvikas-admin-app",
  "version": "2.0.0",
  "description": "SSVikas Kela Agency - Admin Desktop Application for Banana Crop Trading Management",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "generate-sample": "node scripts/generate-sample-data.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.ssvikas.admin",
    "productName": "SSVikas Admin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!scripts",
      "!*.md"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "displayLanguageSelector": false
    }
  },
  "keywords": [
    "banana",
    "trading",
    "agriculture",
    "mandi",
    "accounting"
  ],
  "author": "SSVikas Kela Agency",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "xlsx": "^0.18.5",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2"
  }
}